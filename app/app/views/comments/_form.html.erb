<%= form_for Comment.new do |f| %>

  <p>
    <% if @parentId.present? %>
      Replying to comment <%= @parentId %>
      <%=  %>
    <% end %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :user_id %><br>
    <%= f.text_area :user_id %>
  </p>

  <%= hidden_field_tag(:parentId, @parentId) %>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
